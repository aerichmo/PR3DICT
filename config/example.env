# PR3DICT Configuration
# Copy this to .env and fill in your credentials

# === Kalshi ===
KALSHI_API_KEY=your_email@example.com
KALSHI_API_SECRET=your_password
KALSHI_SANDBOX=true

# === Polymarket ===
POLYMARKET_PRIVATE_KEY=your_polygon_wallet_private_key
POLYMARKET_API_KEY=your_polymarket_api_key
POLYMARKET_API_SECRET=your_polymarket_api_secret
POLYMARKET_PASSPHRASE=your_polymarket_passphrase

# === Redis (optional, for caching) ===
REDIS_URL=redis://localhost:6379/0

# === Risk Management ===
DAILY_LOSS_LIMIT=500
MAX_POSITION_SIZE=100
MAX_PORTFOLIO_HEAT=0.25

# === Trading ===
PAPER_MODE=true
SCAN_INTERVAL_SECONDS=30
MAX_POSITIONS=10

# === Strategies ===
ARBITRAGE_MIN_SPREAD=0.025
ARBITRAGE_MIN_LIQUIDITY=1000
MM_MIN_SPREAD=0.01
MM_MAX_INVENTORY=50

# === Notifications ===
# Telegram Bot (get token from @BotFather, chat_id from @userinfobot)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_CHAT_ID=123456789

# Discord Webhook (get from Server Settings > Integrations > Webhooks)
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/1234567890/abcdefghijklmnopqrstuvwxyz
DISCORD_USERNAME=PR3DICT Bot

# Alert Settings
NOTIFY_MIN_LEVEL=INFO  # INFO, WARNING, ERROR, CRITICAL
NOTIFY_SIGNALS=true
NOTIFY_TRADES=true
NOTIFY_RISK_ALERTS=true
NOTIFY_DAILY_SUMMARY=true

# Daily Summary Time (24h format, UTC)
DAILY_SUMMARY_TIME=00:00

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=pr3dict.log
